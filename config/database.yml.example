# MySQL (default setup).  Versions 4.1 and 5.0 are recommended.
#
# Install the MySQL driver:
#   gem install postgresql
# On MacOS X:
#   gem install postgresql -- --include=/usr/local/lib
# On Windows:
#   There is no gem for Windows.  Install postgresql.so from RubyForApache.
#   http://rubyforge.org/projects/rubyforapache
#
# And be sure to use new-style password hashing:
#   http://dev.postgresql.com/doc/refman/5.0/en/old-client.html
development:
  adapter: postgresql
  database: waiateara_development
  username: postgres
  password:
  host: localhost

# Warning: The database defined as 'test' will be erased and
# re-generated from your development database when you run 'rake'.
# Do not set this db to the same as development or production.
test:
  adapter: postgresql
  database: waiateara_test
  username: postgres
  password:
  host: localhost

production:
  adapter: postgresql
  database: waiateara_production
  username: postgres
  password: 
  host: localhost
