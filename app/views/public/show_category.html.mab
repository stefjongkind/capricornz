div.category! do
  div.paginate {will_paginate @pictures}
  h1 {"#{@category.name}"}
  div.image_list do
    div.header! do
      div.intro {@category.description}
    end
    @pictures.each do |picture|
    	div.image do	  
        div {lightbox_link_to image_tag(picture.public_filename(:thumb), {:class=>"images", :border=>'0'}), picture.public_filename, :rel=>"lightbox[category]"}
      	div.comment {picture.description}
    	end
    end
  end
  div.paginate {will_paginate @pictures}
end
