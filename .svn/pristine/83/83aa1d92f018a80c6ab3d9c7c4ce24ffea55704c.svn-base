body { 
	margin:0;
	padding:0;
	padding-top:0;
	background:#eee;
}

body, p, ol, ul, td {
	font-family: arial, helvetica, sans-serif;
	font-size: 10px;
	color:#444;
}

h1 {
	font-family: arial, helvetica, sans-serif;
	padding:0;
	margin:0;
	padding-top:5px;
	font-size: 42px;
	font-style:italic;
	text-align: center;
	color: #eee;
}

h2 {
	
	font-size:12px;
	text-align: left;
	color: #444;
}

h3 {
	font-style:italic;
	font-size: 14px;
	text-align: left;
	color: #3D66BE;
	
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

a { color:#BCA584; }
a:visited { color: #D08795; }
a:hover { color: #3D66BE }

li {
	font-size:14px;
	list-style:none;
}

li a {
	text-decoration:none;
	
}

li.note {
	font-size:10px;
	color:#B7BAD5;
	margin-bottom:10px;
}

#page_header {
	padding:0;
	margin:0;
	padding-bottom:10px;
	height:50px;
	width: 100%;
	background:#3D66BE;
  
}

#page_left_column {
	float:left;
	width: auto;
	height:auto;
	border-right:1px solid #B7BAD5;
}

#member_id {
	float:left;
	padding-right:1em;
	border:1px dotted #B7BAD5;
	border-right:0;
	border-left:0;
	
}


/* Error */
.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: table;
}


#errorExplanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#errorExplanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  background-color: #c00;
  color: #fff;
}

#errorExplanation p {
  color: #333;
  margin-bottom: 0;
  padding: 5px;
}

#errorExplanation ul li {
  font-size: 12px;
  list-style: square;
}




